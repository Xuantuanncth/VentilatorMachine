    <link rel="stylesheet" href="/stylesheets/header.css">

</head>

<body>
    {{>header}}

    <main>
        <section class="text-center container">
            <div class="row py-lg-5">
                <div class="col-md-6 col-md-8 mx-auto">
                    <h3 class="fw-light">User Information</h3>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add_new_user">
                        <span>Add New User</span>
                    </button>
                </div>
            </div>
        </section>

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    {{#if data}}
                    {{#each data}}
                    <div class="col">
                        <div class="card shadow-sm">
                            <img src={{this.users_avatar}} class="card-img-top"
                                style="height:225px; width:100%; object-fit: contain">

                            <div class="card-body" style="height: 150px; width:420px">
                                <p class="card-text">User Name: <span>{{this.users_name}}</span></p>
                                {{!-- <p class="card-text">{{this.info}}</p> --}}
                                <div class="d-flex justify-content-between align-items-center">

                                    <div class="btn-group">
                                        <button type="button" data-bs-toggle="modal" data-bs-target="#delete_new_user" onclick="delete_info_user({{this.users_id}})" class="btn btn-sm btn btn-danger">Delete</button>
                                        <button type="button" onclick="view_info_user({{this.users_id}})" class="btn btn-sm btn-outline-secondary">View</button>
                                        <button type="button" onclick="edit_info_user({{this.users_id}})" class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </div>
                                    <small class="text-muted">ID: <span>{{this.users_id}}</span></small>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}
