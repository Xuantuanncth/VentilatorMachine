<div class="modal-body">
    <div class="mb-3 form-group">
        <div class="row g-3">
            <div class="col-sm-10">
                <label for="full_name" class="form-label">Full Name</label>
                <input type="text" id="users_name" class="form-control" name="users_name" required
                    aria-describedby="nameHelp">
                <div id="nameHelp" class="form-text">Input full name person.</div>
            </div>
            <div class="col-sm-2">
                <label class="form-label">ID</label>
                <input type="number" id="users_id" required class="form-control" min="1" name="users_id">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3 form-group">
                <label for="users_birthday" class="form-label">Date of birth</label>
                <input type="date" class="form-control" name="users_birthday" id="users_birthday">
            </div>
        </div>
        <div class="col-md-6">
            <fieldset class="mb-3 form-group">
                <legend>Sex</legend>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-check">
                            <input type="radio" name="users_sex" class="form-check-input" id="users_sex_male"
                                value="male">
                            <label class="form-check-label" for="exampleRadio1">Male</label>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="mb-3 form-check">
                            <input type="radio" name="users_sex" class="form-check-input" id="users_sex_female"
                                value="female">
                            <label class="form-check-label" for="exampleRadio2">Female</label>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
    <div class="mb-3 form-group">
        <label for="users_address" class="form-label">Address</label>
        <input type="text" class="form-control" name="users_address" required id="users_address">
    </div>
    <div class="mb-3 form-group">
        <label class="form-label">Information of person</label>
        <textarea class="form-control" required name="users_info" id="users_info"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label" for="avatar">Upload picture of person</label>
        <input type="file" class="form-control" required name="users_avatar" id="users_avatar">
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Submit</button>
</div>