        let v_minute = document.getElementById("v_minute");

        function getRandomData(){
            v_out1.innerHTML=getRandomInt(10, 15)+`<span style="font-size: medium;">mm3</span>`;
            time_out1.innerHTML=getRandomInt(20,30)+`<span style="font-size: medium;">min</span>`;
            oxi_in1.innerHTML= getRandomInt(10, 40)+`<span style="font-size: medium;">%</span>`;
            IE1.innerHTML = getRandomInt(10, 50)+`<span style="font-size: medium;">%</span>`;
            v_in1.innerHTML = getRandomInt(10, 50)+`<span style="font-size: medium;">mm3</span>`;
            time_in1.innerHTML = getRandomInt(10, 60)+`<span style="font-size: medium;">min</span>`;
            DoKhi1.innerHTML = getRandomInt(10, 50)+`<span style="font-size: medium;">%</span>`;
            v_minute.innerHTML = getRandomInt(10, 50)+`<span style="font-size: medium;">min/mm3</span>`;
        }

        function getRandomArbitrary(min, max) {
            return Math.random() * (max - min) + min;
        }
        function getRandomInt(min, max) {
            min = Math.ceil(min);
            max = Math.floor(max);
            return Math.floor(Math.random() * (max - min) + min); // The maximum is exclusive and the minimum is inclusive
        }

        window.onload = function loadData(){
            getRandomData();
        }

